---
import Logo from './icons/Logo.astro';

const links = ['About me', 'Skills', 'Projects', 'Contact'];

---

<div  id="header" class="py-4 sticky top-0 z-20 bg-white bg-opacity-50 backdrop-blur dark:bg-neutral-800 dark:bg-opacity-50 shadow animate-loaded">
<nav id="top-navbar" class="flex flex-wrap justify-between px-10">
  <div>
    <a class="flex gap-4 items-center cursor-pointer">
      <Logo/>
      <p>Catalina Olarte</p>
    </a>
  </div>
  <div class="block md:hidden">
    <button id="nav-toggle" class="flex items-center ">
      <svg class="fill-current h-6 w-6" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>
  <ul id="nav-content" class="flex hidden flex-col justify-center w-full h-full  md:h-fit md:w-fit md:flex md:flex-row items-center gap-5">
    {links.map(link => <li class="nav-bar-link">{link}</li>)}

  </ul>
</nav>
</div>

<style>
  .nav-bar-link {
    @apply cursor-pointer hover:border-b border-green-500 focus:text-transparent bg-clip-text bg-gradient-to-l from-blue-400 to-green-500
}
</style>

<script>
  document.getElementById('nav-toggle').onclick = function(){
			document.getElementById("nav-content").classList.toggle("hidden");
      document.getElementById("header").classList.toggle("h-screen");
      document.getElementById("top-navbar").classList.toggle("h-full");
		}
    
    </script>